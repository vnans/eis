{% extends 'base2.html.twig' %}

{% block title %}Ajout de Produit {% endblock %}

{% block body %}
<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Liste </h1>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <!-- <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6> -->
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>

                <th>Libelle</th>
                <th>Detail</th>
                <th>Images</th>
                <th>Pieces jointe</th>

                <th>actions</th>
            </tr>
          </thead>

          <tfoot>
            <tr>
                <th>Libelle</th>
                <th>Details </th>
                <th>Image</th>
                <th>Pieces jointe</th>
                <th>actions</th>
            </tr>
            </tfoot>
            <tbody>
            {% for realisation in realisations %}
                <tr>

                    <td>{{ realisation.libelle }}</td>
                    <td>{{ realisation.details }}</td>
                    <td>{{ realisation.image }}</td>
                    <td>{{ realisation.piecejointe }}</td>

                    <td>
                        <!-- <a href="{{ path('realisation_show', {'id': realisation.id}) }}">show</a> -->
                        <a href="{{ path('realisation_edit', {'id': realisation.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>


          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>

  
{% endblock %}
