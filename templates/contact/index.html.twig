{% extends 'base2.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
<main id="main" >

</main>

    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom & Prenoms</th>
                <th>Email</th>
                <th>Objet</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.objet }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}">Afficher</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Rien trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- <a href="{{ path('contact_new') }}">Nouveau</a> -->
{% endblock %}
